[run]
branch = True
omit =
    */.local/*
    lint.py
    runTests.py
    testProf.py
    documentation/*
    examples/*
    tests/assertionHelpers.py

[report]
ignore_errors = True
skip_covered = True
exclude_lines =
    # ignore lines that do nothing
    pass$
    # ignore lines for failing to import packages
    except ImportError:
    # ignore test lines not intended to be reached
    assert False

[html]
title = nimble coverage report
directory = coverage_html
